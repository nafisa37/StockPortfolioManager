@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<div>
    <p><strong>Company Name:</strong> @ViewBag.CompanyName</p>
    <p><strong>Company Name:</strong> @ViewBag.TickerSymbol</p>
    <p><strong>Last Sale Price:</strong> @ViewBag.LastSalePrice</p>

    <form method="post" action="@Url.Action("BuyStock", "Account")">
        <input type="hidden" id="ticker" name="ticker" value="@ViewBag.TickerSymbol">
        <input type="number" id="shares" name="shares" min="1" placeholder="Shares to Buy" required />
        <button type="submit" class="btn btn-primary">Buy</button>
    </form>

    <form method="post" action="@Url.Action("SellStock", "Account")">
        <input type="hidden" name="ticker" value="@ViewBag.TickerSymbol">
        <input type="number" name="shares" min="1" placeholder="Shares to Sell" required />
        <button type="submit" class="btn btn-primary">Sell</button>
    </form>
</div>